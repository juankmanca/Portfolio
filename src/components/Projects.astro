---
import dotNetIcon from "../icons/dot-net-core.astro";
import AngularIcon from "../icons/Angular.astro";
import BootstrapIcon from "../icons/Bootstrap.astro";
import Badge from "./Badge.astro";

const TAGS = {
  DOTNET: {
    name: ".Net Core",
    class: "",
    icon: dotNetIcon,
  },
  Angular: {
    name: "Angular",
    class: "",
    icon: AngularIcon,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "",
    icon: BootstrapIcon,
  },
};

const PROJECTS = [
  {
    title: "Rick and Morty App",
    description:
      'Desarrollé una aplicación interactiva que aprovecha la API pública de la famosa serie "Rick and Morty". Esta aplicación ofrece a los usuarios una experiencia completa para explorar información detallada sobre los episodios y personajes de la serie.',
    link: "https://rick-and-morty-app-sooty-kappa.vercel.app/",
    github: "https://github.com/juankmanca/RickAndMortyApp",
    image: "/projects/RickAndMortyOpt.jpg",
    tags: [TAGS.Angular, TAGS.Bootstrap],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, github, link }) => (
    <article>
      <div class="flex gap-x-2">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <a class="flex justify-center items-center" href={github}>
          <Badge>Repositorio</Badge>
        </a>
      </div>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gapt-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <a class="cursor-pointer mt-4" target="_blank" href={link} >
        <img class="rounded shadow-2xl shadow-white/10 bg-white/5 hover:scale-105 hover:bg-white/10 transition" src={image} alt="Imagen Del Proyecto" />
      </a>
    </article>
  ))
}
